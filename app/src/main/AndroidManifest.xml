<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shopme">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopMe">
        <activity android:name=".Ui.activities.AllCategories"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar"

            ></activity>
        <activity
            android:name=".Ui.activities.CheckoutActvity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.AddEditAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.AddressListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.CartListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.ProductDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.AddProductActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.DashboardActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Ui.activities.User_profileActivity"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity android:name=".Ui.activities.BaseActivity" />
        <activity
            android:name=".Ui.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar" />
        <activity
            android:name=".Ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopMe.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ui.activities.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>