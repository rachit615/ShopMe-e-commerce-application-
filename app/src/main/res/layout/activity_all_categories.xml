<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.activities.AllCategories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/back_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="120dp"
                />






        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/button_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WOMEN"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:padding="25dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/womentshirt"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/round_bk3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEN"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:padding="25dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/men_tshirt"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="100dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/round_bk5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIDS"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:padding="25dp"
                android:textColor="@color/colorOffWhite"/>
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/kids_tshirt"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="100dp"/>









        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/round_bk2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME &amp; LIVING"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:padding="25dp"
                android:textColor="@color/colorwhite"/>
            <ImageView
                android:layout_width="90dp"
                android:src="@drawable/home_living"

                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="100dp"/>









        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/round_bk2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WOMEN"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:padding="25dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"/>


        </RelativeLayout>




    </LinearLayout>


</ScrollView>